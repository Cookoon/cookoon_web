if (document.querySelector('.payment-block').classList.contains('payment-block-clicked')) {
  document.getElementById('total-text').innerHTML = 'TOTAL';
  document.getElementById('reservation-price').innerHTML = '<%= humanized_money_with_symbol @base_price %>';
  document.getElementById('discount-balance').innerHTML = 'Crédit disponible : <%= humanized_money_with_symbol @user_discount %>';
  document.getElementById('payment_use_discount').value = 'false';
  document.querySelector('.payment-block').classList.remove('payment-block-clicked');
} else {
  document.getElementById('total-text').innerHTML = 'TOTAL AVEC RÉDUCTION';
  document.getElementById('reservation-price').innerHTML = '<%= humanized_money_with_symbol @computed_prices[:discounted_price] %>';
  document.getElementById('discount-balance').innerHTML = 'Nouveau Crédit : <%= humanized_money_with_symbol @computed_prices[:new_available_discount] %>';
  document.getElementById('payment_use_discount').value = 'true';
  document.querySelector('.payment-block').classList.add('payment-block-clicked');
}
