if (document.querySelector('.payment-block').classList.contains('payment-block-clicked')) {
  document.getElementById('total-text').textContent = 'TOTAL';
  document.getElementById('reservation-price').textContent = '<%= humanized_money_with_symbol @amounts[:payment] %>';
  document.getElementById('discount-balance').textContent = 'Crédit disponible : <%= humanized_money_with_symbol @amounts[:user_discount_balance] %>';
  document.getElementById('payment_discount').value = 'false';
  document.querySelector('.payment-block').classList.remove('payment-block-clicked');
} else {
  document.getElementById('total-text').textContent = 'TOTAL AVEC RÉDUCTION';
  document.getElementById('reservation-price').textContent = '<%= humanized_money_with_symbol @amounts[:charge] %>';
  document.getElementById('discount-balance').textContent = 'Nouveau Crédit : <%= humanized_money_with_symbol @amounts[:remaining_user_discount_balance] %>';
  document.getElementById('payment_discount').value = 'true';
  document.querySelector('.payment-block').classList.add('payment-block-clicked');
}
