        <%= render "cookoons_list", apparts: Cookoon.where(status: "suspended") %>
      </div>
      <div class="tab-pane fade" id="under_review" role="tabpanel">
        <%= render "cookoons_list", apparts: Cookoon.where(status: "under_review") %>
