<%= simple_form_for resource, as: resource_name, url: password_path(resource_name), method: :put, remote: true do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <%= f.full_error :reset_password_token %>

  <%= f.input :password, autocomplete: 'off' %>
  <%= f.input :password_confirmation, autocomplete: 'off' %>

  <div class="form-actions text-center">
    <%= f.submit t('devise.passwords.edit.change_my_password'), class: 'btn btn-cookoon btn-cookoon-primary' %>
  </div>
<% end %>
