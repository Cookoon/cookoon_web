<%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put, remote: true } do |f| %>
  <%= f.hidden_field :invitation_token %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :phone_number %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :terms_of_service, as: :boolean, label: "J'accepte les #{link_to('conditions générales d\'utilisation', 'https://cookoon.fr/conditions-generales/', target: :_blank)}".html_safe %>

  <%= f.button :submit, t("devise.invitations.edit.submit_button"), class: 'button button-blue' %>
<% end %>
