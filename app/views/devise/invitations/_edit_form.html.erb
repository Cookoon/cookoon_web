<%= simple_form_for resource, as: resource_name, url: invitation_path(resource_name), remote: true, authenticity_token: true do |f| %>
  <%= f.hidden_field :invitation_token %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :born_on, start_year: Date.today.year - 90, end_year: Date.today.year - 12, selected: { year: 1965, day: 1, month: 1 } %>
  <%= f.input :phone_number %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.input :terms_of_service, as: :boolean, label: "J'accepte les #{link_to('conditions générales d\'utilisation', 'https://cookoon.fr/conditions-generales/', target: :_blank)}".html_safe %>

  <div class="text-center my-3">
    <%= f.button :submit, t('.submit'), class: 'btn btn-primary btn-action' %>
  </div>
<% end %>
