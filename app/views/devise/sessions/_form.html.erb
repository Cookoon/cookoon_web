<%= simple_form_for resource, as: resource_name, url: session_path(resource_name), remote: true do |f| %>
  <%= f.input :email, required: false, autofocus: true %>
  <%= f.input :password, required: false %>

  <% if @device.in? %i[ios_inside android_inside] %>
    <%= f.input :remember_me, as: :hidden, input_html: { value: 1 } %>
  <% else %>
    <!-- ==== CUSTOM CHECKBOX ==== -->
    <p><%= t('.remember_me') %></p>
    <div class="form-group boolean optional user_remember_me">
      <input value="0" type="hidden" name="user[remember_me]">
      <input class="boolean optional d-none" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
      <label class="boolean optional toggle" for="user_remember_me">
        <span class="toggle-handler"></span>
      </label>
    </div>
    <!-- ==== FIN CUSTOM CHECKBOX ==== -->
  <% end %>

  <div class="text-center mt-3 mb-5">
    <%= f.button :submit, t('.sign_in'), class: 'btn btn-primary btn-action-sm' %>
  </div>

  <%= render 'first_signin_modal' %>
  <i><%= link_to t('.forgot_your_password'), new_password_path(resource_name) %></i>
<% end %>
