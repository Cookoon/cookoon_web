<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), remote: true) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: "Adresse email", required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <!-- ==== CUSTOM CHECKBOX ==== -->
    <p>Se souvenir de moi ?</p>
    <div class="form-group boolean optional user_remember_me">
      <input value="0" type="hidden" name="user[remember_me]">
      <input class="boolean optional hidden" type="checkbox" value="1" name="user[remember_me]" id="user_remember_me">
      <label class="boolean optional toggle" for="user_remember_me">
        <span class="toggle-handler"></span>
      </label>
    </div>
    <!-- ==== FIN CUSTOM CHECKBOX ==== -->

    <%= link_to "J'ai perdu mes idenfiants", new_password_path(resource_name), class: 'italic' %>
    <div class="home-links links-block light-padded">
      <%= f.button :submit, "Se Connecter", class: 'button button-blue' %>
    </div>
  </div>
<% end %>
