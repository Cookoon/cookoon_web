- if @reservation.menu_status == "initial"
  .carousel.slide id="chefSelection" data-ride="false" data-interval="false"
      .carousel-inner
        - chefs.each_with_index do |chef, index|
          .carousel-item class=classnames('active': index.zero?)
            = render 'chefs/card', chef: chef

