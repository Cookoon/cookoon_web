<div id="amex-carousel" class="carousel slide" data-ride="carousel" data-interval="3500">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="figure" style="height:65vh">
        <%= image_tag 'un_chef_pour_vous.jpg' %>
        <figcaption class="amex-carousel-figcaption amex-carousel-figcaption-main-picture">
          <div class="d-flex flex-column h-100 justify-content-between">
            <div class="d-flex justify-content-between align-items-center">
              <h1>Un Chef<br>pour Vous</h1>
              <h5>
                Votre invité, vous<br>et le chef de votre choix<br>dans un lieu exclusivement<br>réservé pour cette occasion.
              </h5>
            </div>
            <!-- <h5>
              Cette invitation est offerte par le programme de parrainage American Express.
            </h5> -->
          </div>
        </figcaption>
      </div>
    </div>
    <div class="carousel-item">
      <div class="figure" style="height:65vh">
        <%= image_tag 'baptiste_renouard.jpg' %>
        <figcaption class="amex-carousel-figcaption">
          <h1>Baptiste Renouard</h1>
          <h5>Chef du restaurant l'Ochre<br>Candidat Top Chef 2019</h5>
        </figcaption>
      </div>
    </div>
    <div class="carousel-item">
      <div class="figure" style="height:65vh">
        <%= image_tag 'merouan_bounekraf.jpg' %>
        <figcaption class="amex-carousel-figcaption">
          <h1>Mérouan Bounekraf</h1>
          <h5>Candidat Top Chef 2019<br>Jury "Mon gâteau est le meilleur de France"</h5>
        </figcaption>
      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#amex-carousel" role="button" data-slide="prev">
    <span class="swiper-button-prev swiper-button-cookoon swiper-button-white d-sm-block" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#amex-carousel" role="button" data-slide="next">
    <span class="swiper-button-next swiper-button-cookoon swiper-button-white d-sm-block" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
