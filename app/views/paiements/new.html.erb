<div class="container">
  <h1>Paiement de votre reservation pour <%= @reservation.cookoon.name %></h1>
  <%= form_tag reservation_paiements_path(@reservation) do %>
    <article>
      <label class="amount">
        <span>Amount: <%= humanized_money_with_symbol(@reservation.price) %></span>
      </label>
    </article>

    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-name="Cookoon.fr"
      data-email="<%= current_user.email %>"
      data-description="Reservation <%= @reservation.id %>"
      data-amount="<%= @reservation.price_cents %>"
      data-currency="<%= @reservation.price.currency %>"
      data-locale="fr"
    ></script>

  <% end %>
</div>
