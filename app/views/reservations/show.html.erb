<%= content_for :navbar_back_url, reservations_path %>
<%= content_for :navbar_content do %>
  <h4 class='text-primary'>Mes Réservations</h4>
<% end %>


<div class="container">
  <div class="reservation-details-card reservation-details-card-grey">
    <h5><%= @reservation.cookoon.name.upcase %></h5>
    <p><%= "#{display_datetime_for(@reservation.start_at, join_expression: '· à')} · pour #{@reservation.duration}h" %></p>
    <p><%= "#{@reservation.cookoon.category} - #{@reservation.cookoon.address} chez #{@reservation.cookoon.user.full_name}" %></p>
    <div class="text-center">
      <i class="fas fa-circle" aria-hidden="true"></i>
    </div>
    <div class="host-details py-3">
      <div class="d-flex-default">
        <p>Numéro de téléphone : </p>
        <p><%= @reservation.cookoon.user.phone_number %></p>
      </div>
      <div class="d-flex-default">
        <p>E-mail : </p>
        <p><%= @reservation.cookoon.user.email %></p>
      </div>
    </div>
    <div class="text-center">
      <i class="fas fa-circle" aria-hidden="true"></i>
    </div>
    <div class="pt-5 pb-3">
      <div class="d-flex-default">
        <p>Location Cookoon</p>
        <p><%= humanized_money_with_symbol @reservation.degressive_price %></p>
      </div>
      <% if @reservation.services_price > 0 %>
        <div class="d-flex-default">
          <p>Prestations</p>
          <p><%= humanized_money_with_symbol @reservation.services_price %></p>
        </div>
      <% end %>
      <div class="d-flex-default">
        <p>Frais de services</p>
        <p><%= humanized_money_with_symbol @reservation.tenant_fee %></p>
      </div>
      <hr class='white'>
      <div class="d-flex-default font-weight-bold">
        <p>TOTAL</p>
        <p><%= humanized_money_with_symbol @reservation.payment_amount %></p>
      </div>

      <% if @reservation.passed? %>
        <div class="text-center pt-5 pb-3">
          <%= link_to 'Demander une facture', reservation_invoices_path(@reservation), class: 'button button-white', method: :post %>
        </div>
      <% else %>
        <h4>Réservation annulée le :</h4>
        <h5> <%= @reservation.updated_at.strftime('%d %B %Y') %></h5>
      <% end %>
    </div>
  </div>
</div>
