<%= content_for :navbar_back_url, reservations_path %>

<div class="container">
  <div class="reservation-details-card reservation-details-card-blue">
    <h5><%= @reservation.cookoon.name.upcase %></h5>
    <p><%= "#{display_datetime_for(@reservation.start_at, join_expression: '· à')} · pour #{@reservation.duration}h" %></p>
    <p><%= "#{@reservation.cookoon.category} - #{@reservation.cookoon.address} chez #{@reservation.cookoon.user.full_name}" %></p>
    <div class="text-center">
      <i class="fa fa-circle" aria-hidden="true"></i>
    </div>
    <div class="host-details py-3">
      <div class="d-flex-default">
        <p>Numéro de téléphone : </p>
        <p><%= @reservation.cookoon.user.phone_number %></p>
      </div>
      <div class="d-flex-default">
        <p>E-mail : </p>
        <p><%= @reservation.cookoon.user.email %></p>
      </div>
    </div>
    <div class="text-center">
      <i class="fa fa-circle" aria-hidden="true"></i>
    </div>
    <div class="pt-5 pb-3">
      <div class="d-flex-default">
        <p>Prix de la location</p>
        <p><%= humanized_money_with_symbol @reservation.price %></p>
      </div>
      <div class="d-flex-default">
        <p>Frais de services</p>
        <p><%= humanized_money_with_symbol @reservation.tenant_fee %></p>
      </div>
      <hr class='white'>
      <div class="d-flex-default font-weight-bold">
        <p>TOTAL</p>
        <p><%= humanized_money_with_symbol @reservation.price_with_tenant_fee %></p>
      </div>

      <% if @reservation.accepted? %>
        <div class="text-center py-3">
          <%= link_to 'Convier mes invités', reservation_guests_path(@reservation), class: 'btn btn-light btn-action' %>
        </div>
      <% end %>

      <div class="text-center pt-3">
        <%= link_to reservation_path(@reservation), method: :patch, remote: true, class: 'text-white opacity-hover' do %>
          <u>Annuler la réservation</u>
        <% end %>
      </div>
    </div>
  </div>
</div>
