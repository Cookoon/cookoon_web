<% unless @user.stripe_verified? %>
  <%= render 'stripe_connection_card' %>
<% end %>
<div class="container pt-5 pb-3">
  <p>Votre activité</p>
  <b>Historique des revenus : <span class="text-primary"><%= humanized_money_with_symbol current_user.total_payouts_for_dashboard %></span></b>

  <% if @cookoons.any? %>
    <div class="text-center pt-4 pb-3">
      <%= link_to 'Mon calendrier', cookoon_availabilities_path(@cookoons.first), class: 'button button-blue' %>
    </div>
  <% end %>

  <hr>

  <p>Vos dernières demandes de réservation</p>
  <b>Vous avez <span class="text-primary"><%= @pending_reservations_count %> demande(s) de réservation</span> en attente</b>
  <div class="text-center pt-5 pb-3">
    <%= link_to 'Voir mes Réservations', host_reservations_path, class: 'button button-blue' %>
  </div>
  <hr>
  <p>Vos Cookoons</p>
  <div class="row">
    <% @cookoons.each do |cookoon| %>
      <div class="col-12 col-md-6">
        <div class="card">
          <%= link_to edit_cookoon_path(cookoon) do %>
            <div class="card-edit">
              <i class="fa fa-pencil" aria-hidden="true"></i>
            </div>
          <% end %>
          <%= link_to cookoon do %>
            <div class="card-picture" style="background-image: url(<%= cookoon_safe_picture(cookoon) %>)"></div>
          <% end %>
          <div class="card-data">
            <div class="card-text">
              <%= cookoon.name %>
            </div>
            <div class="card-infos">
              <%= category_display_for(cookoon) %>
              <%= price_display_for(cookoon) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="py-3 text-center">
    <%= link_to "Proposer mon appartement", new_cookoon_path, class: 'button button-blue' %>
  </div>
</div>
