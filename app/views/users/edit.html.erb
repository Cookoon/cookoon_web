<div class="container">
  <h2>Modifier le profil</h2>

  <%= simple_form_for @user, url: users_path, remote: true do |f| %>
    <div class="form-inputs">
      <%= f.input :photo, as: :attachinary %>
      <%= f.input :first_name %>
      <%= f.input :last_name %>
      <%= f.input :phone_number %>
      <%= f.input :description %>
    </div>

    <div class="form-actions">
      <div class='text-center'>
        <%= f.button :submit, "Mettre à jour", class: 'button button-blue'  %>
      </div>
    </div>
  <% end %>

  <div class="text-center thin-padded">
    <%= link_to destroy_user_session_path, method: :delete, class: 'button no-button', remote: true do  %>
      <i class="fa fa-power-off" aria-hidden="true"></i> Se déconnecter
    <% end %>
  </div>
</div>
