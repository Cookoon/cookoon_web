<%= simple_form_for @user, url: users_path, remote: true do |f| %>
  <div class="form-inputs">
    <%= f.input :photo, as: :attachinary %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :phone_number %>
    <%= f.input :description, input_html: { rows: 3 } %>
  </div>

  <div class="form-actions">
    <div class='text-center'>
      <%= f.submit class: 'btn btn-lg btn-primary px-5 text-uppercase'  %>
    </div>
  </div>
<% end %>
