<%= simple_form_for @cookoon, remote: true do |f| %>
  <%= f.input :name, label: 'Nom du Cookoon', placeholder: 'Ex: Aux Abbesses chez Noémie et Thomas' %>
  <%= f.input :surface, label: 'Surface de réception en m²' %>
  <%= f.input :price, label: 'Prix / heure' %>
  <%= f.input :address, label: 'Adresse', placeholder: '' %>
  <%= f.input :capacity, label: "Capacité d'accueil" %>
  <%= f.input :category, label: 'Categorie', collection: Cookoon::CATEGORIES %>
  <%= f.input :photos, as: :attachinary %>
  <%= f.submit "SOUMETTRE", class: 'button button-blue' %>
<% end %>
