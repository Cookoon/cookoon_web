<div class="container">
    <b>Trouvez le Cookoon dont vous avez besoin</b>
</div>

<%= render 'user_searches/search_form' %>

<div class="container">
  <% if @cookoons.empty? %>
    <h3>Aucun Cookoon dans cette zone, veuillez essayer une autre recherche</h3>
  <% else %>
    <div class="row">
      <%= render 'cookoons_and_map' %>
    </div>
  <% end %>
</div>

<% unless @lat_lng %>
  <%= content_for :after_js do %>
    <script>
      getGeoLocation()
    </script>
  <% end %>
<% end %>
