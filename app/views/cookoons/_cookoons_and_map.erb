<div class="col-12 col-md-8">
  <div class="row">
    <% @cookoons.each do |cookoon| %>
      <div class="col-12 col-md-6 my-2">
        <%= link_to cookoon do %>
          <%= component 'card_cookoon',
                        title: cookoon.name,
                        image_url: cl_image_path(cookoon.photos.first.path, width: 800, height: 450, crop: :fill),
                        icons: [get_cookoon_icon_for(cookoon.category), get_price_rank(cookoon.price_cents)]
          %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="col-12 col-md-4 d-none d-sm-block">
  <div class="map-cookoon-index d-none d-sm-block"
       data-controller='google-maps'
       data-target="google-maps.cookoonIndexMap"
       data-google-maps-markers="<%= @markers.to_json %>"
  ></div>
</div>
