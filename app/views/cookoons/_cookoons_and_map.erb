<div class="col-12 col-md-8">
  <div class="row">
    <% @cookoons.each do |cookoon| %>
      <div class="col-12 col-md-6">
        <%= link_to cookoon do %>
          <div class="card">
            <div class="card-picture" style="background-image: url(<%= cookoon_safe_picture(cookoon) %>)"></div>
            <div class="card-data">
              <div class="card-text">
                <%= cookoon.name %>
              </div>
              <div class="card-infos">
                <%= category_display_for(cookoon) %>
                <%= price_display_for(cookoon) %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<div class="col-12 col-md-4 d-none d-sm-block">
  <div class="map-cookoon-index d-none d-sm-block"
       data-controller='google-maps'
       data-target="google-maps.cookoonIndexMap"
       data-google-maps-markers="<%= @markers.to_json %>"
  ></div>
</div>
