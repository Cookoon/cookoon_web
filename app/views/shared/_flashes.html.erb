<% if notice %>
  <div class="alert alert-success alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-danger alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <%= alert %>
  </div>
<% end %>

<% if flash[:payment_succeed] %>
  <%= render 'payments/succeed' %>
<% end %>
<% if flash[:service_payment_succeed] %>
  <%= render 'services/payments/succeed' %>
<% end %>
<% if flash[:ephemeral_payment_succeed] %>
  <%= render 'ephemerals/payments/succeed' %>
<% end %>
<% if flash[:invitation_sent] %>
  <%= render 'devise/invitations/sent' %>
<% end %>
<% if flash[:invitation_accepted] %>
  <%= render 'devise/invitations/accepted' %>
<% end %>
