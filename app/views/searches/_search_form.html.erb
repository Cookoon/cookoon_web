<div class="search">
  <div class="container">
    <div class="search-header">
      <div>Autour de vous</div>
      <div>Tout de suite</div>
      <div>Pour 4</div>
    </div>
    <div class="search-body">
      <div class="container">
        <%= simple_form_for(:search) do |f| %>
          <div class="row">
            <div class="col-xs-12">
              <%= f.input :address, label: false, placeholder: 'Ou ?' %>
            </div>
            <div class="col-xs-12">
              <%= f.input :datetime, label: false, placeholder: 'Quand ?', input_html: { id: "search-date" }  %>
            </div>
            <div class="col-xs-12 col-md-6">
              <!-- Nombre de participants -->
              <div class="increment-block" data-input="#search_number" data-field="#number">
                <i class="fa fa-minus-circle control" aria-hidden="true" data-action="minus"></i>
                <div id="participants"><span id="number">1</span> Personne(s)</div>
                <i class="fa fa-plus-circle control" aria-hidden="true" data-action="plus"></i>
              </div>
              <%= f.input :number, input_html: {value: 1, data: {min: 1, max: 20}}, as: :hidden %>
            </div>
            <div class="col-xs-12 col-md-6">
              <!-- Nombre d'heures -->
              <div class="increment-block" data-input="#search_duration" data-field="#duration">
                <i class="fa fa-minus-circle control" aria-hidden="true" data-action="minus"></i>
                <div id="hours"><span id="duration">1</span> Heure(s)</div>
                <i class="fa fa-plus-circle control" aria-hidden="true" data-action="plus"></i>
              </div>
              <%= f.input :duration, input_html: {value: 1, data: {min: 1, max: 5}}, as: :hidden %>
            </div>
          </div>
          <div class="text-center">
            <%= f.submit :rechercher, class: 'button button-white' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= content_for(:after_js) do %>
  <script>
    $(function () {
      $('#search-date').datetimepicker({
        showTodayButton: true,
        locale: 'fr'
      });
    });
  </script>
<% end %>
